<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/trailer_selector"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_play_button"
        android:contentDescription="@string/trailer_content_dsc" />

    <TextView
        android:id="@+id/trailer_label"
        tools:text="Trailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        app:layout_constraintBottom_toBottomOf="@+id/play_icon"
        app:layout_constraintStart_toEndOf="@+id/play_icon"
        app:layout_constraintTop_toTopOf="@+id/play_icon" />

    <ImageView
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/titleColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trailer_label"
        android:contentDescription="@string/divider_content_dsc" />

</android.support.constraint.ConstraintLayout>